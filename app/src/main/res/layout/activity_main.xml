        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="arial"
            android:text="Menu"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="5dp"
            android:background="#333333" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/moodTrackerBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_margin="0dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/dashboard_icon_mood_tracker" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Mood"
                        android:textColor="#333333"

                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/journalBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_margin="0dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/dashboard_icon_journal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Journal"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/quoteBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_margin="0dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/dashboard_icon_quote" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Quote"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/medicationReminderBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_margin="0dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/dashboard_icon_medication_reminder" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Reminder"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/calendar_view"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_margin="0dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/calendar" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Calendar"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />
